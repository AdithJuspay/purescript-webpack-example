{
  "name": "purescript-hello",
  "version": "1.0.0",
  "description": "",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "DEBUG=purs-loader webpack-dev-server --watch",
    "format": "find . -wholename './src/*.purs' -or -wholename './test/*.purs' | xargs -I _ purty --write _",
    "check-formatting": "find . -wholename './src/*.purs' -or -wholename './test/*.purs' | xargs -I _ purty validate _",
    "list-warnings": "psa --stash --censor-lib --is-lib=bower_components --no-colors --no-source compile --json-errors 2>&1 | ps-suggest --list",
    "fix-warnings": "psa --stash --censor-lib --is-lib=bower_components --no-colors --no-source compile --json-errors 2>&1 | ps-suggest --apply"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "pscid": "^2.9.3",
    "purescript": "^0.13.8",
    "purescript-psa": "^0.8.0",
    "purescript-suggest": "^2.2.0",
    "purs-loader": "^3.7.2",
    "purty": "^6.3.0",
    "webpack": "^4.44.1",
    "webpack-cli": "^3.3.12",
    "webpack-dev-server": "^3.11.0"
  }
}
